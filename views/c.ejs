<!-- ================= NORMALIZE URL (VERY IMPORTANT) ================= -->
<%
  const currentUrl = url.split('?')[0].replace(/\/$/, '');
  const isActive = (path) =>
    currentUrl === path || currentUrl.startsWith(path + '/');
%>

<!-- BEGIN: Header-->
<header class="page-topbar" id="header">
  <div class="navbar navbar-fixed">
    <nav class="navbar-main navbar-color nav-collapsible sideNav-lock" style="height:75px;background:#fff;box-shadow:0 2px 3px -1px rgba(0,0,0,.1);">

      <div class="nav-wrapper">

        <!-- LOGO -->
        <ul class="left">
          <li>
            <a class="brand-logo" href="/admin">
              <img src="/img/Logo (1).png" alt="Logo" />
            </a>
          </li>
        </ul>

        <!-- HORIZONTAL MENU -->
        <ul class="hide-on-med-and-down" style="margin-left:120px;">

          <li class="bold <%= isActive('/admin') ? 'active' : '' %>">
            <a href="/admin">
              <i class="material-icons <%= isActive('/admin') ? 'theme-text' : 'black-text' %>">dashboard</i>
              <span class="<%= isActive('/admin') ? 'theme-text' : 'black-text' %>">Dashboard</span>
            </a>
          </li>

          <li class="bold <%= isActive('/admin/user') ? 'active' : '' %>">
            <a href="/admin/user">
              <i class="material-icons <%= isActive('/admin/user') ? 'theme-text' : 'black-text' %>">person</i>
              <span class="<%= isActive('/admin/user') ? 'theme-text' : 'black-text' %>">Users</span>
            </a>
          </li>

          <li class="bold <%= isActive('/admin/category') ? 'active' : '' %>">
            <a href="/admin/category">
              <i class="material-icons <%= isActive('/admin/category') ? 'theme-text' : 'black-text' %>">view_module</i>
              <span class="<%= isActive('/admin/category') ? 'theme-text' : 'black-text' %>">Manage Category</span>
            </a>
          </li>

          <li class="bold <%= isActive('/admin/product') ? 'active' : '' %>">
            <a href="/admin/product">
              <i class="material-icons <%= isActive('/admin/product') ? 'theme-text' : 'black-text' %>">widgets</i>
              <span class="<%= isActive('/admin/product') ? 'theme-text' : 'black-text' %>">Products</span>
            </a>
          </li>

          <li class="bold <%= isActive('/admin/reports') ? 'active' : '' %>">
            <a href="/admin/reports">
              <i class="material-icons <%= isActive('/admin/reports') ? 'theme-text' : 'black-text' %>">insert_chart</i>
              <span class="<%= isActive('/admin/reports') ? 'theme-text' : 'black-text' %>">Reports</span>
            </a>
          </li>

          <li class="bold <%= isActive('/admin/commission') ? 'active' : '' %>">
            <a href="/admin/commission">
              <i class="material-icons <%= isActive('/admin/commission') ? 'theme-text' : 'black-text' %>">attach_money</i>
              <span class="<%= isActive('/admin/commission') ? 'theme-text' : 'black-text' %>">Commission</span>
            </a>
          </li>

        </ul>

        <!-- PROFILE -->
        <ul class="right">
          <li>
            <a class="dropdown-trigger" data-target="profile-dropdown">
              <img src="/img/avatar.png" style="height:40px;border-radius:50%">
            </a>
          </li>
        </ul>

      </div>
    </nav>
  </div>
</header>
<!-- END: Header -->


